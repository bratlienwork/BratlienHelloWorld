name: hello-world
on: push
jobs:
  my-job:
    runs-on: windows-latest
    permissions: write-all
    steps:
      - name: my-step
        uses: actions/checkout@v3
      - name: Set up JDK 11
        uses: actions/setup-java@v3
        with:
          java-version: '11'
          distribution: 'temurin'
          cache: maven
      - name: Build With Maven
        run: mvn build --file pom.xml
      - name: Build and Run tests
        run: mvn test --batch-mode --fail-at-end

      - name: Publish Test Report
        if: success() || failure()
        uses: scacap/action-surefire-report@v1
        with: 
         file_name_in_stack_trace: true 
       - name: Read migrations
        id: migrations
         uses: komorebitech/read-files-action@v1.5
        with:
         files: '["**/surefire-reports/sample.junit.HelloWord.xml", "**/surefire-reports/TEST-sample.junit.CalculateTest.txt"]'
      - name: Echo migrations
       run: echo "${{ steps.migrations.outputs.content }}"
      - name: invoke chatops pulse
        uses: muinmomin/webhook-action@v1.0.0
        with:
          url: "https://pulse-7-container.qtestnet.com/webhook/f8525ead-f79b-4afb-8873-b374c421fb5c"
          data: '{"foo": "Bard"}'
    

