name: hello-world
on: push
jobs:
  my-job:
    runs-on: windows-latest
    permissions: write-all
    steps:
      - name: my-step
        uses: actions/checkout@v3
      - name: Set up JDK 11
        uses: actions/setup-java@v3
        with:
          java-version: '11'
          distribution: 'temurin'
          cache: maven
      - name: Build With Maven
        run: mvn build --file pom.xml
      - name: Build and Run tests
        run: mvn test --batch-mode --fail-at-end

      - name: Publish Test Report
        uses: scacap/action-surefire-report@v1.7
        with: 
         file_name_in_stack_trace: true 

    - name: List Files
        id: list-files
        uses: mirko-felice/list-files-action@v3.0.1
        with:
          repo: ${{ github.repository }}
          ref: ${{ github.ref }}
          path: "."
          ext: ".yml"
    - name: Output results
        run: |
          echo ${{ matrix.paths }}

      - name: invoke chatops pulse
        uses: muinmomin/webhook-action@v1.0.0
        with:
          url: "https://pulse-7-container.qtestnet.com/webhook/f8525ead-f79b-4afb-8873-b374c421fb5c"
          data: '{"foo": "Bard"}'
    

