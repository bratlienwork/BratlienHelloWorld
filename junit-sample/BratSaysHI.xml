name: hello-world
on: push
jobs:
  my-job:
    runs-on: windows-latest
    permissions: write-all
    steps:
      - name: my-step
        uses: actions/checkout@v3
      - name: Set up JDK 11
        uses: actions/setup-java@v3
        with:
          java-version: '11'
          distribution: 'temurin'
          cache: maven
      - name: Build With Maven
        run: mvn build --file pom.xml
      - name: Build and Run tests
        run: mvn test --batch-mode --fail-at-end

      - name: Publish Test Report
        uses: scacap/action-surefire-report@v1.7
        with: 
         file_name_in_stack_trace: true 

      - name: invoke chatops pulse
        uses: muinmomin/webhook-action@v1.0.0
        with:
          url: "https://pulse-7-container.qtestnet.com/webhook/f8525ead-f79b-4afb-8873-b374c421fb5c"
          data: '{"foo": "Bard"}'
 
       - name: File List
         uses: the-coding-turtle/ga-file-list@v0.4.1

       - name: List of files by extension
         uses: alisuleymantopuz/list-of-files-by-extension-github-action@v1.0.5

      - name: "Check file presence"
        uses: JJ/files-present-action@releases/v1
        with:
          files: "package.json, LICENSE, README.md, foo, bar"

      - name: Read file contents
        id: read_file
        uses: andstor/file-reader-action@v1
        with:
          path: " D:\a\BratlienHelloWorld\BratlienHelloWorld\src\test\resources"

      - name: File contents
        run: echo "${ steps.read_file.outputs.contents }"

   - name: invoke chatops pulse 2
